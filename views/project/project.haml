.form-element.title
    %label Title
    %input{:id => 'title', :type => 'text', :name => "project[title]", :value => "#{@project.title}"}
.form-element.description
    %label Description
    %br
    %textarea{:id => 'description', :name => "project[description]", :rows => 10, :cols => 44}
        =@project.description
.form-element.save
    %input{:type => 'submit', :value => 'Save'}
